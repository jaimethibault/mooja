<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 booking-confirmation">
      <div class="booking-confirmation-title">
        <h2> Nearly there to go surfin' at : </h2>
      </div>
      <div class="booking-confirmation-details">
        <div class="card">
          <div class="card-title">
            <h3>ğŸ„ <%= @surfcamp.name %> ğŸ„</h3>
          </div>
          <div class="card-image text-center">
            <% unless @surfcamp.photos[0].blank? %>
            <%= cl_image_tag @surfcamp.photos[0].path, width: 445, height: 220, crop: :fill %>
            <% end %>
          </div>
          <div class="card-booking-details">
            <div class="card-booking-details-address">
            <div class="row">
              <div class="col-xs-6"><p><strong>From </strong> <%= @booking.starts_at.strftime("%A, %b %d") %></p></div>
              <div class="col-xs-6"><p><strong>To </strong> <%= @booking.ends_at.strftime("%A, %b %d") %></p></div>
            </div>
            </div>
            <div class="card-booking-details-price">
              <p class="price-paid"><%= @booking.total_discounted_price %>â‚¬</p>
           <% unless @booking.total_discounted_price = @booking.total_original_price %>
              <p class="original-price"><%= @booking.total_original_price %>â‚¬</p>
           <% end %>
            </div>
          </div>
        </div>
        <% pourcentage = ((1 - @booking.total_discounted_price.to_f / @booking.total_original_price.to_f) * 100).to_i  %>
        <% unless pourcentage == 0 %>
          <div class="card-booking-details-discount">
            <div class="text">
                <p> <%= pourcentage %>% OFF</p>
            </div>
          </div>
        <% end %>
      <div class="stripe">
        <%= form_tag booking_payments_path(@booking) do %>
          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-name="<%= @surfcamp.name %>"
            data-email="<%= current_user.email %>"
            data-description=" From <%= @booking.starts_at.strftime("%d/%m/%Y") %> to <%= @booking.ends_at.strftime("%d/%m/%Y") %>"
            data-amount="<%= (@booking.total_discounted_price * 100).to_i %>"
            data-currency="EUR"> <%#= @booking.total_discounted_price.currency if we decide to monetize booking model%>
          </script>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <!--   displaying several flight -->
      <div class="flight-date">You will be ğŸ›« on the: <%= @flight_date %></div>
      <% @flights.each do |flight_hash| %>
        <div class="flight-container">
          <div class="flight-infos">
            <div class="flight-number verticalLineRight"><%= flight_hash["flight_number"] %></div>
            <div class="flight-departure">
              <div class="flight-departure-time"><%= flight_hash["flight_departure_time"] %></div>
              <div class="flight-departure-airport"><%= flight_hash["flight_departure_airport"] %></div>
            </div>
            <div class="flight-duration"><i class="fa fa-long-arrow-right" aria-hidden="true"></i>  <%= flight_hash["flight_duration"] %>  <i class="fa fa-long-arrow-right" aria-hidden="true"></i></div>
            <div class="flight-arrival">
              <div class="flight-arrival-time"><%= flight_hash["flight_arrival_time"] %></div>
              <div class="flight-arrival-airport"><%= flight_hash["flight_arrival_airport"] %></div>
            </div>
            <div class="flight-price"><%= flight_hash["flight_price"]  %></div>
            <div class="flight-button">
              <button type="button" class="btn btn-primary">Select <i class="fa fa-arrow-right" aria-hidden="true"></i></button>
            </div>
          </div>
        </div>
      <% end %>
      <!--   end of flight div -->
    </div>
  </div>
</div>


